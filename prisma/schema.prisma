generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id    String     @id @default(uuid())
  name  String?
  shirt Shirt[]
}

model Shirt {
  id           Int     @id @default(autoincrement())
  title        String
  link         String?
  imageURL     String?
  priceInCents Int?
  size         String?
  status       Int     @default(1)
  person       Person  @relation(fields: [personId], references: [id])
  personId     String
}
